extends ../main.layout.pug

block variables
  - var title = 'Обо мне'

block scripts
  script(src='about.bundle.js')

block content
  section.person
    .person__picture
    -
      var socials = [
        ['vk', 'http://vk.com'],
        ['github', 'http://gh.com'],
        ['in', 'http://in.com']
      ]
    .person__links
      ul.socials
        each item in socials
          li.socials__item
            a(href= `${item[1]}`).socials__link
              +icon(item[0], 'socials__link-icon')

    .person__menu
      a(href='#').hamburger

    .person__title
      .person__bg
      .section-title
        img(src='assets/images/content/avatar-140.jpg', alt='avatar').section-title__pic

      .user__description
        .user__name Антон Дубовский
        .user__info Личный сайт разработчика

    a(href="#").down-btn.hero__down-btns

  section.about
    .about__left

      //.about__triangle
      .triangle_fill_white

      .about__left-title
        .block-title Обо мне

      .about__left-content
        .user-description
          .user-description__image
            img(src='assets/images/content/about-photo.jpg', alt='avatar').user-description__avatar
          .user-description__data
            .user-description__title
              .block-subtitle Кто я
            .user-description_text.text-content
              p Давно выяснено, что при оценке дизайна и композиции читаемый текст мешает сосредоточиться.
              p Давно выяснено, что при оценке дизайна и композиции читаемый текст мешает сосредоточиться.

    .about__right

      //.about__triangle
      .triangle_fill_beige

      .about__right-title
        .block-subtitle.block-subtitle_graphics Чем я могу быть вам полезен

      .about__right-description.text-content
        p Давно выяснено, что при оценке дизайна и композиции читаемый текст мешает сосредоточиться.
      .about__right-content
        -
          var skills = [
          ['Frontend', [['Html5', 30], ['css3', 50], ['javascript', 70]]],
          ['Backend', [['Html5', 30], ['css3', 50], ['javascript', 70]]],
          ['Workflow', [['Html5', 30], ['css3', 50], ['javascript', 70]]]
          ]

        ul.skills-list
          each skillsrow in skills
            li.skills-list__item.skills-row
              .skills-row__title #{skillsrow[0]}
              ul.skills-row__list
                each skill in skillsrow[1]
                  li.skills-row__item
                    figure.skill(data-percents="70")
                      svg(viewBox="0 0 100 100" preserveAspectRatio="none").skill__figure
                        circle(cx="50" cy="50" r="40").skill__circle.skill__circle_under
                        circle(cx="50" cy="50" r="40", style="animation-delay: -20s").skill__circle.skill__circle_above
                      .skill__title #{skill[0]}

  section.map
    .google-map
    .map__data
      .contacts
        h2.contacts__title
          .block-subtitle Контакты
        address.contacts__data
          ul.contacts__list
            -
              var contacts = [
              ['skype', 'skype_anton'],
              ['phone_n', '+7(918) 444-55-888'],
              ['envelope_n', 'anton@emale.ru'],
              ['map_n', 'Krasnodar city']
              ]
            each item in contacts
              li.contacts__item.contacts-row
                .contacts-row.contacts__icon
                  +icon(item[0], 'contacts__icon-img')
                .contacts-row.contacts__title #{item[1]}

  include ./../common/_footer
