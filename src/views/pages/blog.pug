extends ../main.layout.pug

block variables
    - var title = 'Обо мне'

block scripts
    script(src='about.bundle.js')

block content
    section.person.person_blog
        .person__picture
        -
            var socials = [
            ['vk', 'http://vk.com'],
            ['github', 'http://gh.com'],
            ['in', 'http://in.com']
            ]
        .person__links
            ul.socials
                each item in socials
                    li.socials__item
                        a(href= `${item[1]}`).socials__link
                            +icon(item[0], 'socials__link-icon')

        .person__menu
            a(href='#').hamburger

        .person__title.person__title_blog
            .person__bg
            .section-title.section-title_blog
                img(src='assets/images/content/avatar-140.jpg', alt='avatar').section-title__pic

            .user__description
                .user__blog Блог
                .user__blog-desc Сайты которые я написал

